# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/larry

# Redis (optional - for real-time status updates)
REDIS_URL=redis://localhost:6379

# S3/MinIO Configuration
# For local development (MinIO):
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=larry-documents
S3_FORCE_PATH_STYLE=true
AWS_REGION=us-east-1

# For AWS production (comment out S3_ENDPOINT and credentials):
# S3_BUCKET=larry-prod-documents
# AWS_REGION=us-east-1
# S3_ACCESS_KEY and S3_SECRET_KEY not needed (uses IAM role)

# SQS Configuration
# For local development (localstack):
SQS_QUEUE_URL=http://localhost:4566/000000000000/larry-ingest
SQS_ENDPOINT=http://localhost:4566
SQS_ACCESS_KEY_ID=test
SQS_SECRET_ACCESS_KEY=test
SQS_REGION=us-east-1

# For AWS Lambda with SQS trigger (comment out SQS_QUEUE_URL):
# SQS_QUEUE_URL not needed (Lambda receives messages automatically)

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# Debug logging (set to "true" to enable detailed logs)
# Useful for troubleshooting in Lambda or local development
ENABLE_DEBUG_LOGS=false
