{
  "name": "@larry/worker",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @larry/db generate",
    "dev": "tsx watch src/index.ts",

    "prebuild": "pnpm --filter @larry/shared build && pnpm --filter @larry/db generate && pnpm --filter @larry/db build",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",

    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/client-sqs": "^3.971.0",
    "@larry/db": "workspace:^",
    "@larry/shared": "workspace:^",
    "ioredis": "^5",
    "openai": "^6.16.0",
    "pdf-parse": "^2.4.5",
    "zod": "^3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsx": "^4",
    "typescript": "^5"
  }
}
